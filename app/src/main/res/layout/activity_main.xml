<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scannear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/ScanCodigo"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ScanCodigo"
        android:text="Datos:"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:id="@+id/letrero"
        android:textSize="20sp"
        android:layout_marginLeft="4dp"
        app:layout_constraintRight_toLeftOf="@id/valorCodigo"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/valorCodigo"
        android:text="Desconocido"
        app:layout_constraintTop_toBottomOf="@id/ScanCodigo"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@id/letrero"
        android:layout_marginLeft="4dp"
        android:textSize="20sp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>